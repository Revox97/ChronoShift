<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ChronoShift.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ChronoShift.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="ChronoShift">
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<RowDefinition Height="40"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Menu Grid.Row="0">
			<MenuItem Header="File"></MenuItem>
			<MenuItem Header="Edit"></MenuItem>
			<MenuItem Header="Organisation"></MenuItem>
			<MenuItem Header="View"></MenuItem>
			<MenuItem Header="Help">
				<MenuItem Header="About"/>
			</MenuItem>
		</Menu>
		<!-- Add button icons (if required) -->
		<DockPanel Grid.Row="1">
			<!-- TODO Find better naming-->
			<ToggleButton>Dienstplan</ToggleButton>
			<ToggleButton>Einsatzplan</ToggleButton>
			<ToggleButton>Jahr</ToggleButton>

			<Button DockPanel.Dock="Right" HorizontalAlignment="Right">Configuration</Button>
			<Button DockPanel.Dock="Right" HorizontalAlignment="Right">Filters</Button>
		</DockPanel>
		<Border x:Name="ContentContainer" Grid.Row="2" Margin="2 0 2 2"
				Child="{Binding Content}"/>
	</Grid>
</Window>
